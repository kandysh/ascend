{
  "name": "ascend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "pnpm run --filter './packages/*' build",
    "dev": "pnpm run --parallel --filter './apps/*' dev",
    "test": "echo \"No tests configured yet\"",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "db:generate": "pnpm run --filter @ascend/db db:generate",
    "db:migrate": "pnpm run --filter @ascend/db db:migrate",
    "db:studio": "pnpm run --filter @ascend/db db:studio",
    "infra:start": "cd infra && docker compose up -d",
    "infra:stop": "cd infra && docker compose down",
    "infra:restart": "pnpm infra:stop && pnpm infra:start",
    "infra:logs": "cd infra && docker compose logs -f",
    "infra:clean": "cd infra && docker compose down -v",
    "service:auth": "pnpm run --filter @ascend/auth-service dev",
    "service:gateway": "pnpm run --filter @ascend/gateway dev",
    "service:scores": "pnpm run --filter @ascend/scores-service dev",
    "service:leaderboards": "pnpm run --filter @ascend/leaderboards-service dev",
    "service:worker": "pnpm run --filter @ascend/worker-service dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.25.0",
  "engines": {
    "node": ">=25.0.0"
  },
  "type": "module",
  "devDependencies": {
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "prettier": "^3.7.4",
    "typescript-eslint": "^8.49.0"
  }
}
